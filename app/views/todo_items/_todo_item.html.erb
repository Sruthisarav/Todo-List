<tr class = "todo-item">
  <td>
    <div class = "complete-btn">
      <%= link_to link_to "Completed",
        complete_todo_list_todo_item_path(@todo_list, todo_item.id), 
        method: :patch %>
    </div>
  </td>
  <td>
    <% if todo_item.completed? %>
      <div class = "todo-item completed">
        <p style = "color: gray; text-decoration: line-through">
          <%= todo_item.content %>
        </p>
      </div>
    <% else %>
      <div class = "todo-item">
        <p><%= todo_item.content %></p>
      </div>
    <% end %>
    <p>
      Tags:
      <% todo_item.tags.each do |tag| %>
      <%= link_to tag.name, tag_path(tag) %>
      <% end %>
    </p>
  </td>
  <td>
    <div class = "delete-btn">
      <%= link_to "Delete", 
        todo_list_todo_item_path(@todo_list, todo_item.id), 
        method: :delete, data: { confirm: "Do you want to delete this item?" } %>
    </div>
  </td>
</tr>